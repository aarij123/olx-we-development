@model IEnumerable<Social.Models.ad>
@{
    ViewBag.Title = "ad_historydetail";
    Layout = "~/_LayoutPage1.cshtml";
}

<div class="row">
    <div class="col-lg-2 col-md-2">
        <br />
        <center><h4>Ad Details</h4></center>
    </div>
    <div class="col-lg-10 col-md-10">

    </div>

</div><hr />
<div class="row">
    <div class="col-lg-6 col-md-6">

        <table class="table">
            <tbody>
                @foreach (var item in Model)
                {

                      <tr>
                        <td class="text-dark"><i class="fa fa-user"></i> Ad Title : </td>

                        <td>@item.ad_title</td>
                      </tr>
                      <tr>
                        <td class="text-dark"><i class="fa fa-list-ol"></i> Ad Category : </td>
                        <td>@item.adcat_name</td>
                      </tr>
                      <tr>
                      <td class="text-dark"><i class="fa fa-book"></i> Ad Product Price : </td>
                      <td>@item.ad_price</td>
                      </tr>
                      <tr>
                      <td class="text-dark"><i class="fa fa-group"></i> Ad Description : </td>
                      <td>@item.ad_desc</td>
                      </tr>
                    <tr>
                        <td class="text-dark"><i class="fa fa-user"></i> Posted : </td>

                        <td>@item.ad_datetime</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <h6>Sold To : </h6>
                        </td>
                        </tr>
                    <tr>
                        <td class="text-dark"><i class="fa fa-list-ol"></i> Name : </td>
                        <td>@item.user_fname @item.user_lname</td>
                    </tr>
                    <tr>
                        <td class="text-dark"><i class="fa fa-book"></i> Email : </td>
                        <td>@item.user_email</td>
                    </tr>
                    <tr>
                        <td class="text-dark"><i class="fa fa-group"></i> Contact : </td>
                        <td>@item.user_contact</td>
                    </tr>
                    <tr>
                        <td class="text-dark"><i class="fa fa-book"></i> Address : </td>
                        <td>@item.user_address</td>
                    </tr>
                    <tr>
                        <td class="text-dark"><i class="fa fa-group"></i> Image : </td>
                        <td>
                        <img src="~/Images/@item.user_imgpath" class="img-fluid" alt="User Image" width="80" height="70"/>
                      </td>
                    </tr>

                }


            </tbody>
        </table>
        @foreach (var item in Model)
        {
            @Html.ActionLink("Goto Profile", "home_userprofile", "Home", new { id = @item.user_id }, new { @class = "btn btn-sm btn-outline-secondary" })
        }


    </div>
    <div class="col-lg-6 col-md-6">

        <!--Carousel Wrapper-->
        <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                @foreach (var item in Model)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Images/@item.ad_img1" alt="First slide" width="400" height="360">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/@item.ad_img2" alt="Second slide" width="400" height="360">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/@item.ad_img3" alt="Third slide" width="400" height="360">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/@item.ad_img4" alt="Fourth slide" width="400" height="360">
                    </div>
                }
            </div>
            <!--/.Slides-->
            <!--Controls-->
            <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <!--/.Controls-->
            <ol class="carousel-indicators">
                @foreach (var item in Model)
                {
                    <li data-target="#carousel-thumb" data-slide-to="0" class="active">
                        <img class="d-block w-200 img-fluid" src="~/Images/@item.ad_img1" />
                    </li>
                    <li data-target="#carousel-thumb" data-slide-to="1">
                        <img class="d-block w-200 img-fluid" src="~/Images/@item.ad_img2" />
                    </li>
                    <li data-target="#carousel-thumb" data-slide-to="2">
                        <img class="d-block w-200 img-fluid" src="~/Images/@item.ad_img3" />
                    </li>
                    <li data-target="#carousel-thumb" data-slide-to="3">
                        <img class="d-block w-200 img-fluid" src="~/Images/@item.ad_img4" />
                    </li>
                }
            </ol>
        </div>


    </div>

</div>