@model  Social.Models.ad
    @{
        ViewBag.Title = "myprofile";
        Layout = "~/_LayoutPage1.cshtml";
   
    }

    <br>
    <!------------------------------------------------------->
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-pubadd-tab" data-toggle="tab" href="#nav-pubadd" role="tab" aria-controls="nav-pubadd" aria-selected="true">Published Adds</a>
            <a class="nav-item nav-link" id="nav-history-tab" data-toggle="tab" href="#nav-history" role="tab" aria-controls="nav-history" aria-selected="false">History</a>
             </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <!-------START right profile section published adds-->
        <div class="tab-pane fade show active" id="nav-pubadd" role="tabpanel" aria-labelledby="nav-pubadd-tab">
            <br>

            <div class="container-fluid">
                <div class="row">
                  @foreach (var item in ViewBag.ads)
                  {


                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img class="card-img-top" src="~/Images/@item.ad_img1" alt="Card image cap" width="230" height="200">
                                <div class="card-body">
                                    <p class="card-text">@item.ad_title</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @Html.ActionLink("View","ad_detailview",new { id = @item.ad_id},new { @class="btn btn-sm btn-outline-secondary"})
                                            @Html.ActionLink("Edit", "ad_update", new { id = @item.ad_id }, new { @class = "btn btn-sm btn-outline-secondary" })
                                         
                                      
                                        </div>&nbsp;
                                        <small class="text-muted">@item.ad_datetime</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                  }
                    <!----ending card body-->
       
               </div>
            </div>
            <!--- ending card body--->


        </div>
        <!-------END right profile section published adds-->
        <!-- Start of right profile section, History--->
        <div class="tab-pane fade" id="nav-history" role="tabpanel" aria-labelledby="nav-history-tab">
            <br>


            <div class="container-fluid">
                <div class="row">
                  @foreach (var item in ViewBag.soldads)
                  {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="~/Images/@item.ad_img1" alt="Card image cap" width="230" height="200">
                            <div class="card-body">
                                <p class="card-text">@item.ad_title</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @Html.ActionLink("View", "ad_historydetail", new { id = @item.ad_id }, new { @class = "btn btn-sm btn-outline-secondary" })
                                    </div>
                                    <small class="text-muted"><span style="color:#F00;">Sold</span></small>
                                </div>
                            </div>
                        </div>
                    </div>
                  }
                    <!----ending card body-->
                    @foreach (var item in ViewBag.buyads)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img class="card-img-top" src="~/Images/@item.ad_img1" alt="Card image cap" width="230" height="200">
                                <div class="card-body">
                                    <p class="card-text">@item.ad_title</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @Html.ActionLink("View", "ad_historybuydetail", new { id = @item.ad_id }, new { @class = "btn btn-sm btn-outline-secondary" })
                                        </div>
                                        <small class="text-muted"><span style="color:darkgreen;">Purchased</span></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                
                </div>
            </div>
            <!--- ending card body--->


        </div>
        <!-- ENd of right profile section, History-->
     
    </div>
    <!-------end of right profile section published adds,history and add new adds-->
    <!------------------------------------------------------->

