@model IEnumerable<Social.Models.adcategory>

@{
    ViewBag.Title = "adcat_show";
    Layout = "~/Adminpanel.cshtml";
}
<hr />
<h4 class="mb-3">Ad Category</h4><hr />
@Html.ActionLink("Add New", "adcat_insert", new { @*id = @item.adcat_id*@ }, new { @class = "btn btn-dark btn-sm btn-outline-secondary" })<br /><br />
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Ad Category ID</th>
                <th>Ad Category Name</th>
                <th>Ad Category Edit</th>
                <th>Ad Category Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.adcat_id</td>
                    <td>@item.adcat_name</td>
                    <td>@Html.ActionLink("Edit", "adcat_edit", new { id = @item.adcat_id }, new { @class = "btn btn-dark btn-sm btn-outline-secondary" })</td>
                    <td>@Html.ActionLink("Delete", "adcat_delete", new { id = @item.adcat_id }, new { @class = "btn btn-dark btn-sm btn-outline-secondary" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>