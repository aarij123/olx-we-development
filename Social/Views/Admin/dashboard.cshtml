@model Social.Models.total
@{
    ViewBag.Title = "dashboard";
    Layout = "~/Adminpanel.cshtml";
}
<br /><hr />
<h2>Dashboard</h2>
<hr />
<br />
<div class="container">
<div class="row">
    <div class="col-xl-4 col-sm-4 mb-4">
        <div class="card text-white bg-dark o-hidden h-100">
            <div class="card-body">
                <div class="mr-5">@Model.users() Registered Users</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="~/Admin/admin_userlist">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-4 mb-4">
        <div class="card text-white bg-dark o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-list"></i>
                </div>
                <div class="mr-5">@Model.ads() Acive Ads</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="~/Admin/admin_adlist">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-4 mb-4">
        <div class="card text-white bg-dark o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                </div>
                <div class="mr-5">@Model.sold() Ads Sold</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="~/Admin/admin_soldreport">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
</div>